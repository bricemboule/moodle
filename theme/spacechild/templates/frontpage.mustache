<div class="cs-landing cs-landing--full {{#hastoplinks}}has-topstrip{{/hastoplinks}}">

  <!-- ✅ TOP STRIP (barre noire type Coursera) -->
  {{#hastoplinks}}
  <div class="cs-topstrip">
    <div class="cs-container cs-topstrip__inner">
      <nav class="cs-topstrip__nav" aria-label="Menu haut">
        {{#toplinks}}
          <a class="cs-topstrip__link" href="{{{url}}}">{{label}}</a>
        {{/toplinks}}
      </nav>
    </div>
  </div>
  {{/hastoplinks}}

 

  <!-- Top bar -->
  <header class="cs-topbar">
    <div class="cs-container cs-topbar__inner">
      <div class="cs-topbar__brand cs-animate-left">
        <a class="cs-brand__logo" href="{{{exploreurl}}}">
          <img src="{{wwwroot}}/theme/spacechild/images/qualisys-logo.svg" alt="{{sitename}}">
          <span class="cs-brand__tagline">training</span>
        </a>
        <nav class="cs-topbar__links" aria-label="Navigation principale">
          <a class="cs-topbar__link" href="{{{exploreurl}}}">Explorer</a>
          <a class="cs-topbar__link" href="{{{searchurl}}}">Diplomes</a>
        </nav>
      </div>

      <form class="cs-topbar__search cs-animate-zoom" action="{{{searchurl}}}" method="get" role="search">
        <input
          class="cs-topbar__search-input"
          type="text"
          name="search"
          placeholder="Que souhaiterez-vous apprendre ?"
          aria-label="Que souhaiterez-vous apprendre ?"
        >
        <button class="cs-topbar__search-btn" type="submit">Rechercher</button>
      </form>

      <nav class="cs-topbar__actions cs-animate-right">
        <a class="cs-topbar__link cs-topbar__link--muted" href="{{{loginurl}}}">Connexion</a>
        <a class="cs-btn cs-btn--ghost" href="{{{signupurl}}}" data-signup-modal>Inscrivez-vous gratuitement</a>
      </nav>
    </div>
  </header>

   <!-- Announcement carousel -->
  <section class="cs-announcement cs-animate" aria-label="Annonces">
    <div class="cs-container">
      <div class="cs-announcement__viewport">
        <div class="cs-announcement__track">
          <div class="cs-announcement__list">
            <div class="cs-announcement__item">Nouveau parcours ISO 9001 : inscriptions ouvertes.</div>
            <div class="cs-announcement__item">Webinaire gratuit : Audit interne qualite, le 15 avril.</div>
            <div class="cs-announcement__item">HSE et securite : -20% pour les equipes ce mois-ci.</div>
            <div class="cs-announcement__item">Certificats partageables sur LinkedIn des la fin du cours.</div>
          </div>
          <div class="cs-announcement__list" aria-hidden="true">
            <div class="cs-announcement__item">Nouveau parcours ISO 9001 : inscriptions ouvertes.</div>
            <div class="cs-announcement__item">Webinaire gratuit : Audit interne qualite, le 15 avril.</div>
            <div class="cs-announcement__item">HSE et securite : -20% pour les equipes ce mois-ci.</div>
            <div class="cs-announcement__item">Certificats partageables sur LinkedIn des la fin du cours.</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Hero carousel -->
  {{#hascarousel}}
  <section class="cs-hero cs-hero--carousel cs-animate">
    <div class="cs-container">
      <div class="cs-carousel" role="region" aria-label="Annonces principales" style="--cs-carousel-count: {{carouselcount}};">
        <div class="cs-carousel__viewport">
          <div class="cs-carousel__track">
            {{#carousel}}
            <div class="cs-carousel__slide">
              {{#primary}}
              <article class="cs-promo cs-promo--brand cs-stagger cs-animate-left">
                <div class="cs-promo__tag">{{tag}}</div>
                <h2>{{title}}</h2>
                <p>{{text}}</p>
                <a class="cs-btn cs-btn--ghost" href="{{{url}}}">{{cta}}</a>
                {{#badge}}<div class="cs-promo__badge">{{badge}}</div>{{/badge}}
              </article>
              {{/primary}}

              {{#secondary}}
              <article class="cs-promo cs-promo--light cs-promo--split cs-animate-right">
                <div class="cs-promo__content cs-stagger">
                  <div class="cs-promo__tag">{{tag}}</div>
                  <h2>{{title}}</h2>
                  <p>{{text}}</p>
                  <a class="cs-btn cs-btn--ghost" href="{{{url}}}">{{cta}}</a>
                </div>
                <div class="cs-promo__visual cs-animate" aria-hidden="true">
                  <div class="cs-promo__ring"></div>
                  <div class="cs-promo__orb"></div>
                  {{#icon}}
                  <div class="cs-promo__icon">
                    <img src="{{{icon}}}" alt="">
                  </div>
                  {{/icon}}
                </div>
              </article>
              {{/secondary}}
            </div>
            {{/carousel}}
          </div>
        </div>

        <div class="cs-carousel__dots" aria-hidden="true">
          {{#carouseldots}}
            <span{{#isactive}} class="is-active"{{/isactive}}></span>
          {{/carouseldots}}
        </div>
      </div>
    </div>
  </section>
  {{/hascarousel}}

  <!-- Logos / trust -->
  <section class="cs-trust">
    <div class="cs-container">
      <p class="cs-trust__title cs-animate">Ils nous font confiance</p>
      <div class="cs-trust__logos cs-stagger">
        <span class="cs-pill">Université</span>
        <span class="cs-pill">Entreprise</span>
        <span class="cs-pill">ONG</span>
        <span class="cs-pill">Administration</span>
        <span class="cs-pill">Partenaire</span>
      </div>
    </div>
  </section>

  <section class="cs-metrics" aria-label="Chiffres cles">
    <div class="cs-container">
      <div class="cs-metrics__inner">
        <div class="cs-metrics__intro cs-animate">
          <span class="cs-metrics__eyebrow">Chiffres cles</span>
          <h2>Des resultats concrets pour chaque public</h2>
          <p class="cs-metrics__lead">
            Suivez la progression des apprenants, la richesse du catalogue et la dynamique des partenaires.
          </p>
        </div>
        <div class="cs-metrics__grid cs-stagger" role="list">
          <div class="cs-metric" role="listitem">
            <div class="cs-metric__value" data-countup="1" data-target="200" data-suffix="+">200+</div>
            <div class="cs-metric__label">Apprenants formes</div>
          </div>
          <div class="cs-metric" role="listitem">
            <div class="cs-metric__value" data-countup="1" data-target="100" data-suffix="+">100+</div>
            <div class="cs-metric__label">Cours disponibles</div>
          </div>
          <div class="cs-metric" role="listitem">
            <div class="cs-metric__value" data-countup="1" data-target="100" data-suffix="%">100%</div>
            <div class="cs-metric__label">Satisfaction moyenne</div>
          </div>
          <div class="cs-metric" role="listitem">
            <div class="cs-metric__value" data-countup="1" data-target="20" data-suffix="+">20+</div>
            <div class="cs-metric__label">Categories actives</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="cs-section">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Catégories populaires</h2>
        <a class="cs-link" href="{{{exploreurl}}}">Tout voir →</a>
      </div>

      {{#hascategories}}
      <div class="cs-grid cs-grid--4 cs-stagger">
        {{#categories}}
          <a class="cs-card" href="{{{url}}}">
            {{#image}}
              <div class="cs-card__media">
                <img src="{{{image}}}" alt="{{name}}" loading="lazy">
              </div>
            {{/image}}
            <div class="cs-card__title">{{name}}</div>
            <div class="cs-card__meta">Voir les cours</div>
          </a>
        {{/categories}}
      </div>
      {{/hascategories}}

  {{^hascategories}}
    <div class="cs-empty">Aucune catégorie à afficher.</div>
  {{/hascategories}}
</div>
</section>

  <section class="cs-section cs-section--muted">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Pourquoi choisir {{sitename}}</h2>
      </div>
      <div class="cs-grid cs-grid--4 cs-stagger">
        <div class="cs-card">
          <div class="cs-card__title">Experts terrain</div>
          <div class="cs-card__meta">Cours créés par des professionnels en activité.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Projets concrets</div>
          <div class="cs-card__meta">Cas pratiques et portfolio guidé.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Flexibilité totale</div>
          <div class="cs-card__meta">Accès 24/7 sur mobile et desktop.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Certifications</div>
          <div class="cs-card__meta">Badges et attestations en fin de parcours.</div>
        </div>
      </div>
    </div>
  </section>

  <section class="cs-section">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Formats d’apprentissage</h2>
      </div>
      <div class="cs-grid cs-grid--4 cs-stagger">
        <div class="cs-card">
          <div class="cs-card__title">Cours vidéo courts</div>
          <div class="cs-card__meta">Leçons de 5-10 min, faciles à suivre.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Labs interactifs</div>
          <div class="cs-card__meta">Exercices guidés et quizz immédiats.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Projets encadrés</div>
          <div class="cs-card__meta">Briefs réels, feedback et corrections.</div>
        </div>
        <div class="cs-card">
          <div class="cs-card__title">Évaluations</div>
          <div class="cs-card__meta">Tests, badges et suivi de progression.</div>
        </div>
      </div>
    </div>
  </section>

  {{#haspaths}}
  <section class="cs-section">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Parcours certifiants</h2>
        <a class="cs-link" href="{{{exploreurl}}}">Voir les parcours →</a>
      </div>
      <div class="cs-grid cs-grid--3 cs-stagger">
        {{#paths}}
          <article class="cs-card cs-card--path">
            <div class="cs-card__eyebrow">{{badge}}</div>
            <div class="cs-card__title">{{title}}</div>
            <div class="cs-card__meta">{{summary}}</div>
            <div class="cs-card__meta">{{duration}} • {{level}} • {{projects}}</div>
            <a class="cs-link" href="{{{url}}}">{{cta}}</a>
          </article>
        {{/paths}}
      </div>
    </div>
  </section>
  {{/haspaths}}

  <!-- Featured courses -->
  <section class="cs-section cs-section--muted">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Cours recommandés</h2>
        <a class="cs-link" href="{{{searchurl}}}">Rechercher des cours →</a>
      </div>

      {{#hascourses}}
      <div class="cs-grid cs-grid--4 cs-stagger">
        {{#courses}}
          <article class="cs-course">
            <div class="cs-course__thumb">
              {{#image}}
                <img src="{{{image}}}" alt="{{title}}" loading="lazy">
              {{/image}}
              {{^image}}
                <div class="cs-course__thumbInner"></div>
              {{/image}}
            </div>
            <div class="cs-course__body">
              <div class="cs-course__title">{{title}}</div>
              <div class="cs-course__summary">{{summary}}</div>
              {{#canrequest}}
              <a class="cs-course__cta" href="{{{enrolurl}}}" data-signup-modal>Demander l’inscription →</a>
              {{/canrequest}}
            </div>
          </article>
        {{/courses}}
      </div>
      {{/hascourses}}

      {{^hascourses}}
        <div class="cs-empty">Aucun cours à afficher.</div>
      {{/hascourses}}
    </div>
  </section>

  {{#hasoutcomes}}
  <section class="cs-section">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Résultats concrets pour les apprenants</h2>
      </div>
      <div class="cs-outcomes cs-stagger">
        {{#outcomes}}
          <div class="cs-outcome">
            <div class="cs-outcome__value">{{value}}</div>
            <div class="cs-outcome__label">{{label}}</div>
          </div>
        {{/outcomes}}
      </div>
    </div>
  </section>
  {{/hasoutcomes}}

  {{#hastestimonials}}
  <section class="cs-section cs-section--muted">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Ce que disent nos apprenants</h2>
      </div>
      <div class="cs-grid cs-grid--3 cs-stagger">
        {{#testimonials}}
          <article class="cs-quote">
            <div class="cs-quote__text">“{{quote}}”</div>
            <div class="cs-quote__by">{{name}} • {{role}}</div>
          </article>
        {{/testimonials}}
      </div>
    </div>
  </section>
  {{/hastestimonials}}

  {{#hasfaq}}
  <section class="cs-section">
    <div class="cs-container">
      <div class="cs-section__head cs-animate">
        <h2>Questions fréquentes</h2>
      </div>
      <div class="cs-faq cs-stagger">
        {{#faq}}
          <details class="cs-faq__item">
            <summary>{{question}}</summary>
            <div class="cs-faq__answer">{{answer}}</div>
          </details>
        {{/faq}}
      </div>
    </div>
  </section>
  {{/hasfaq}}

 

  {{> theme_spacechild/spacechild/signup_modal }}
  {{> theme_spacechild/spacechild/landing_footer }}

</div>
