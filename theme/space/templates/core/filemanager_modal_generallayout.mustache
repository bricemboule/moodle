{{!
    @template core/filemanager_modal_generallayout

    This template renders the general layout (not QuickUpload).

    Example context (json):
    {}
}}
<div class="container px-0">
    <div tabindex="0" class="file-picker fp-generallayout d-inline-flex flex-wrap w-100" role="dialog" aria-live="assertive">
        
        <div class="rui-nav-wrapper">
            <div role="tablist" class="fp-repo-area rui-nav-col">
                    <ul class="nav nav-column flex-md-column fp-repo nav-item small" role="tab" aria-selected="false" tabindex="-1">
                        <li class="nav-item"><a href="#" class="nav-link" tabindex="-1"><img class="fp-repo-icon" alt=" " width="0" height="0" /><span class="fp-repo-name"></span></a></li>
                    </ul>
            </div>
        </div>
        <div class="col px-0 px-md-3 mx-0">
            <div class="fp-repo-items" tabindex="0">
                <div class="fp-navbar clearfix icon-no-spacing p-0 mb-3">
                    <div class="d-inline-flex flex-wrap w-100">

                        <div class="fp-toolbar mb-0">

                            <div class="d-inline-flex flex-wrap align-items-center w-100">
                                <div class="fp-tb-back">
                                    <a href="#" class="btn btn-secondary btn-sm">{{#str}}back, repository{{/str}}</a>
                                </div>
                                <div class="fp-tb-search">
                                    <form></form>
                                </div>
                                <div class="fp-tb-refresh">
                                    <a title="{{#str}}refresh, repository{{/str}}" class="btn btn-secondary btn-sm" href="#">
                                        {{#pix}}a/refresh{{/pix}}
                                    </a>
                                </div>
                                <div class="fp-tb-logout">
                                    <a title="{{#str}}logout, repository{{/str}}" class="btn btn-secondary btn-sm" href="#">
                                        {{#pix}}a/logout{{/pix}}
                                    </a>
                                </div>
                                <div class="fp-tb-manage">
                                    <a title="{{#str}}manageurl, repository{{/str}}" class="btn btn-secondary btn-sm" href="#">
                                        {{#pix}}a/setting{{/pix}}
                                    </a>
                                </div>
                                <div class="fp-tb-uploadfile">
                                    <a title="{{#str}}upload{{/str}}" class="btn btn-secondary btn-sm" href="#">
                                        {{#pix}}i/upload{{/pix}}
                                    </a>
                                </div>
                                <div class="fp-tb-help">
                                    <a title="{{#str}}help, repository{{/str}}" class="btn btn-secondary btn-sm" href="#">
                                        {{#pix}}a/help{{/pix}}
                                    </a>
                                </div>
                            </div>
                            <div class="fp-tb-message"></div>
                        </div>
                        <div class="fp-viewbar btn-group ml-auto">
                            <a role="button" title="{{#str}}displayicons, repository{{/str}}" class="fp-vb-icons btn btn-secondary btn-sm p-2" href="#">
                                <i class="fa fa-th" aria-hidden="true"></i>
                            </a>
                            <a role="button" title="{{#str}}displaydetails, repository{{/str}}" class="fp-vb-details btn btn-secondary btn-sm p-2" href="#">
                                <i class="fa fa-list" aria-hidden="true"></i>
                            </a>
                            <a role="button" title="{{#str}}displaytree, repository{{/str}}" class="fp-vb-tree btn btn-secondary btn-sm p-2" href="#">
                                <i class="fa fa-sitemap" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="fp-clear-left"></div>
                    </div>
                    <div class="fp-pathbar breadcrumb mx-1 my-2">
                        <span class="fp-path-folder breadcrumb-item"><a class="fp-path-folder-name aalink" href="#"></a></span>
                    </div>
                </div>
                <div class="fp-content"></div>
            </div>
        </div>
    </div>
</div>
